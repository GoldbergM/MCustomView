<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MontageView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="borderRadius" format="dimension" />
        <attr name="backGroundColor" format="color" />
        <attr name="gapColor" format="color" />
        <attr name="gapMinWidth" format="dimension" />
        <attr name="gapMaxWidth" format="dimension" />
        <attr name="animDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color|integer" />
    </declare-styleable>

    <declare-styleable name="MaterialProgressView">
        <attr name="border_Width" format="dimension" />
        <attr name="paintColors" format="reference" />
        <attr name="angleDuration" format="integer" />
        <attr name="sweepDuration" format="integer" />
        <attr name="minSweepAngle_" format="integer" />
        <attr name="minGapAngle" format="integer" />
    </declare-styleable>

    <declare-styleable name="IOSProgressView">
        <attr name="iColor" format="color" />
        <attr name="iRadius" format="dimension" />
        <attr name="iLeafCount" format="integer" />
        <attr name="iDuration" format="integer" />
        <attr name="iGradient" format="boolean" />
        <attr name="iGradientDuration" format="integer" />

    </declare-styleable>
</resources>
